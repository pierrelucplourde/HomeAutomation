@model List<HomeAutomation.DataAccess.Entity.Device>
@{
    ViewBag.Title = "Device List";
    ViewBag.Id = "DeviceList";
}

<h2>DeviceList</h2>

<div id="Form">
    <a href="~/Device/Create">Add new device</a>
    <table>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td>IP Address</td>
            <td>Action</td>
        </tr>

        @foreach (var device in Model) {

            <tr>
                <td>@device.Name</td>
                <td>@device.Description</td>
                <td>@device.IPAddress</td>
                <td><a href="~/Device/ListComponent/@device.Id">List Component</a><a href="~/Device/Edit/@device.Id">Edit</a> <a href="~/Device/Delete/@device.Id">Delete</a></td>
            </tr>
        }

    </table>
</div>
